# top-most EditorConfig file
root = true

# Set the default charset
[*]
charset = utf-8
indent_size = 2

# Indentation settings
[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 2

# End of line settings
[*.{js,html,css}]
end_of_line = lf

# Trim trailing whitespace
[*.{js,html,css}]
trim_trailing_whitespace = true

# Insert final newline
[*.{js,html,css}]
insert_final_newline = true
