{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist/esm",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "declarationDir": "types",
    "inlineSources": true,
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
